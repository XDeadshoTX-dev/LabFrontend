<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="BlockLinkingApp.MainWindow"
        Title="Block Linking App" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="LightGray" Margin="10">
            <TextBlock Text="blocksss:" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="BlockCounter" Text="count blocks: 0" Margin="5"/>
            <Button x:Name="AssignmentButton" Content="Assignment Block" Tag="AssignmentBlock" Click="AddBlockButton_Click" Margin="5"/>
            
            <Button x:Name="ConstantAssignmentButton" Content="Constant Assignment Block" Tag="ConstantAssignmentBlock" Click="AddBlockButton_Click" MouseDoubleClick="Border_MouseDoubleClick" Margin="5"/>
            <Button x:Name="InputButton" Content="Input Block" Tag="InputBlock" Click="AddBlockButton_Click" Margin="5"/>
            <Button x:Name="PrintButton" Content="Print Block" Tag="PrintBlock" Click="AddBlockButton_Click" Margin="5"/>
            <Button x:Name="IfButton" Content="If Block" Tag="if" Click="AddBlockButton_Click" Margin="5"/>
            <Button x:Name="ElseButton" Content="Else Block" Tag="else" Click="AddBlockButton_Click" Margin="5"/>
            <Button x:Name="SaveButton" Content="Save All" Click="SaveAllButton_Click" Margin="5"/>
            <Button x:Name="LoadButton" Content="Load All" Click="LoadAllButton_Click" Margin="5"/>
            <Button x:Name="TranslateButton" Content="Translate into code" Click="TranslateButton_Click" Margin="5"/>
            <ComboBox x:Name="LanguageComboBox" Width="120" Margin="5"/>
            <ComboBox x:Name="UILanguageComboBox" Width="120" Margin="5" SelectionChanged="UILanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="English" Tag="en" IsSelected="True"/>
                <ComboBoxItem Content="Українська" Tag="uk"/>
                <ComboBoxItem Content="Deutsch" Tag="de"/>
            </ComboBox>



        </StackPanel>

        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="WorkspaceCanvas" Background="White" AllowDrop="True" Drop="WorkspaceCanvas_Drop" Width="1500" Height="15000">
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>