<Window x:Class="BlockLinkingApp.BlockConnectionChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Connection Type" Height="335" Width="811">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="35" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="ForestGreen"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Button Content="Next" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Click="NextButton_Click" Height="88" Width="275"/>
        <Button Content="Exit Else" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ExitElseButton_Click" Height="92" Width="275" Margin="0,173,0,0"/>
    </Grid>
</Window>
